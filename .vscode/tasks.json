{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/clang++",
            "args": [
                "-Wall",
                "-O3",
                "-std=c++17",
                "-g",
                "-fansi-escape-codes",
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}/include",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/opt/sdl2/lib",
                "-L/opt/homebrew/opt/sdl2_image/lib",
                "-L/opt/homebrew/opt/sdl2_mixer/lib",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/engine/3d/*.cpp",
                "${workspaceFolder}/src/engine/ecs/*.cpp",
                "${workspaceFolder}/src/engine/gfx/*.cpp",
                "${workspaceFolder}/src/engine/core/*.cpp",
                "${workspaceFolder}/src/engine/math/*.cpp",
                "-o",
                "${workspaceFolder}/build/engine"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Schumaker."
        },
        {
            "type": "cppbuild",
            "label": "build-windows",
            "command": "/opt/homebrew/bin/x86_64-w64-mingw32-g++",
            "args": [
                "-Wall",
                "-O3",
                "-std=c++17",
                "-static-libgcc",
                "-static-libstdc++",
                "-I${workspaceFolder}/include",
                "-I/opt/homebrew/Cellar/mingw-w64/*/toolchain-x86_64/x86_64-w64-mingw32/include",
                "-L/opt/homebrew/Cellar/mingw-w64/*/toolchain-x86_64/x86_64-w64-mingw32/lib",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/engine/3d/*.cpp",
                "${workspaceFolder}/src/engine/ecs/*.cpp",
                "${workspaceFolder}/src/engine/gfx/*.cpp",
                "${workspaceFolder}/src/engine/core/*.cpp",
                "${workspaceFolder}/src/engine/math/*.cpp",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-lopengl32",
                "-o",
                "${workspaceFolder}/build/engine.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Cross-compile for Windows x64"
        }
    ],
    "version": "2.0.0"
}